<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBF9"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="L E V E L  9"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="338dp"
        android:layout_height="21dp"
        app:srcCompat="@drawable/shadow"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/level"
        android:layout_marginTop="165dp"/>

    <ImageView
        android:id="@+id/character"
        android:layout_width="150dp"
        android:layout_height="185dp"
        android:layout_below="@+id/level"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/horizontal_progress_drawable"
        app:srcCompat="@drawable/chara1" />

    <ProgressBar
        android:id="@+id/xpbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#DBDBDB"
        android:progressDrawable="@drawable/horizontal_progress_drawable" />

    <ProgressBar
        android:id="@+id/energybar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/xpbar"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#DBDBDB"
        android:progressDrawable="@drawable/horizontal_progress_drawable" />

    <ProgressBar
        android:id="@+id/attackbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/energybar"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#DBDBDB"
        android:progressDrawable="@drawable/horizontal_progress_drawable" />

    <TextView
        android:id="@+id/xpmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xpbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Level Up!"
        android:visibility="invisible"
        android:textSize="24sp" />

    <!-- Steps Text Box -->
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xpbar"
        android:text="Steps" />

    <!-- Step Counter Text Box -->
    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_info"
        android:text="0"
        android:textSize="40sp" />

    <Button
        android:id="@+id/trainingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_steps"
        android:layout_marginTop="20dp"
        android:text="Training" />

    <Button
        android:id="@+id/achievementsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_steps"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Achievements" />

    <Button
        android:id="@+id/mapbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_steps"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/achievementsbutton"
        android:layout_marginLeft="40dp"
        android:text="Map" />


</RelativeLayout>

